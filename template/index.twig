<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:400,500&amp;subset=cyrillic" rel="stylesheet">
    <title>Directory overview</title>
    <style>
      {{ less }}
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="h1">
        Catalog
      </h1>
      <div class="list">
        {{ list }}
      </div>
    </div>
    <script>
    var list = document.querySelector('.list');
    list.addEventListener('click', function (e) {
      var el = e.target.closest('.list-el__description');
      if (el) {
        var parent = el.parentNode;
        if (parent.classList.contains('list-el_folder')) {
          parent.classList.toggle('list-el_folder-open');
          e.preventDefault();
        }
      }
    });
    </script>
  </body>
</html>
